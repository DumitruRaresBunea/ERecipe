@model ERecipePresentation.DTO.CategoryDto
@{
    ViewData["Title"] = "GetCategoryById";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h4>@ViewBag.Message</h4>
<div>
    <h1>Category Details</h1>
    <br />
    <div>
        <p>
            <strong>Category Name: </strong>@Model.Name
        </p>
        <div class="form-group text-left">
            <a class="btn btn-sm btn-primary" asp-controller="Categories" asp-action="UpdateCategory"
               asp-route-categoryId="@Model.Id">Update Category</a>
            <a class="btn btn-sm btn-primary" asp-controller="Categories" asp-action="DeleteCategory"
               asp-route-categoryId="@Model.Id">Delete Category</a>
        </div>
    </div>
</div>