@model ERecipePresentation.DTO.IngredientDto
@{
    ViewData["Title"] = "GetIngredientById";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h4>@ViewBag.Message</h4>
<div>
    <h1>Ingredient Details</h1>
    <br />
    <div>
        <p>
        <p> <strong>Ingredient Name: </strong>@Model.Name</p>
        <p> <strong>Quantity: </strong>@Model.Quantity</p>
        </p>
        <div class="form-group text-left">
            <a class="btn btn-sm btn-primary" asp-controller="Ingredients" asp-action="UpdateIngredient"
               asp-route-ingredientId="@Model.Id">Update Ingredient</a>
            <a class="btn btn-sm btn-danger" asp-controller="Ingredients" asp-action="DeleteIngredient"
               asp-route-ingredientId="@Model.Id">Delete Ingredient</a>
        </div>
    </div>
</div>