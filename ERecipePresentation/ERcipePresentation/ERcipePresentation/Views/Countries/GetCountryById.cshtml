@model ERcipePresentation.ViewModel.CountryRecipesViewModels
@{
    ViewData["Title"] = "GetCountryById";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h4>@ViewBag.Message</h4>
<div>
    <h1>Country Details</h1>
    <br />
    <div>
        <p>
            <strong>Country Name: </strong>@Model.Country.Name
        </p>
        <div class="form-group text-left">
            <a class="btn btn-sm btn-primary" asp-controller="Countries" asp-action="UpdateCountry"
               asp-route-countryId="@Model.Country.Id">Update Country</a>
            <a class="btn btn-sm btn-danger" asp-controller="Countries" asp-action="DeleteCountry"
               asp-route-countryId="@Model.Country.Id">Delete Country</a>
        </div>
    </div>
    <br /><br />
    <div>
        <h4>@ViewBag.RecipeMessage</h4>
        @foreach (var item in Model.Recipes)
        {
            <div>
                <p>
                    <strong>Name:</strong>
                    <span>@item.Name</span>
                    <a asp-controller="Home" asp-action="GetRecipeById"
                       asp-route-recipeID="@item.Id">Recipe Details</a>
                </p>
            </div>
        }
    </div>
</div>